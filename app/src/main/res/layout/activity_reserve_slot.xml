<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context=".ui.events.ReserveSlotActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Machine" />

    <TextView
        android:id="@+id/machineName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="OBH1" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Starts At" />

    <EditText
        android:id="@+id/startsAtDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="date" />

    <EditText
        android:id="@+id/startsAtTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="time" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ends At" />

    <EditText
        android:id="@+id/endsAtDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="date" />

    <EditText
        android:id="@+id/endsAtTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="time" />

    <Button
        android:id="@+id/btnReserveSlot"
        android:enabled="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Reserve Slot" />

</LinearLayout>