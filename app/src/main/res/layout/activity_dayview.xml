<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".DayviewActivity">

    <com.alamkanak.weekview.WeekView
        android:id="@+id/weekView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:columnGap="8dp"
        app:dayBackgroundColor="#fff"
        app:defaultEventColor="@color/colorAccent"
        app:eventTextColor="#fff"
        app:headerRowBackgroundColor="@android:color/darker_gray"
        app:headerRowPadding="12dp"
        app:hourHeight="60dp"
        app:numberOfVisibleDays="1"
        app:timeColumnBackgroundColor="#fff"
        app:timeColumnPadding="8dp"
        app:timeColumnTextColor="@android:color/holo_blue_light"
        app:timeColumnTextSize="12sp"
        app:todayBackgroundColor="#fffeee" />
</LinearLayout>